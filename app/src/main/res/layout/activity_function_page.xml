<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#282828"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnToMyDataPage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/attendrecord" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp">

            <Button
                android:id="@+id/btnToNFCPage"
                android:layout_width="98dp"
                android:layout_height="130dp"
                android:layout_marginRight="30dp"
                android:layout_margin="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/rollcallpage" />

            <Button
                android:id="@+id/btnToShowClassHrsPage"
                android:layout_width="98dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/learnhours"/>

    </LinearLayout>
            <Button
                android:id="@+id/btnToAboutPage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/modify" />

</LinearLayout>